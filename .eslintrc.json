{
    "root": true,
    "extends": [
//        "eslint:recommended",
        "plugin:vue/recommended"
    ],
    "env": {
        "browser": true
    },
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "parser": "babel-eslint",
        "sourceType": "module"
    },
    "rules": {
        // override/add rules settings here, such as:
        "vue/no-unused-vars": "error",
        "vue/html-indent": ["error", 4],
        "no-unused-expressions": ["error", {
            "allowTaggedTemplates": true
        }]
    }
}
