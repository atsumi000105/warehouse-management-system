{
    "name": "happybottoms/coverd",
    "description": "Coverd Donation Bank Management App",
    "type": "project",
    "keywords": [
        "inventory",
        "charity",
        "donation",
        "diapers"
    ],
    "license": "GPL-3.0-or-later",
    "require": {
        "php": "^7.3.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/annotations": "^1.6",
        "fightbulc/moment": "^1.26",
        "nelmio/cors-bundle": "^1.5",
        "phpoffice/phpspreadsheet": "^1.6",
        "ramsey/uuid-doctrine": "^1.5",
        "samj/fractal-bundle": "^2.1",
        "sensio/framework-extra-bundle": "^5.2",
        "stof/doctrine-extensions-bundle": "^1.3",
        "symfony/console": "*",
        "symfony/flex": "^1.1",
        "symfony/framework-bundle": "*",
        "symfony/monolog-bundle": "^3.3",
        "symfony/orm-pack": "^1.0",
        "symfony/security-bundle": "*",
        "symfony/serializer-pack": "^1.0",
        "symfony/swiftmailer-bundle": "^3.2",
        "symfony/templating": "*",
        "symfony/twig-bundle": "*",
        "symfony/validator": "*",
        "symfony/webpack-encore-bundle": "^1.0",
        "symfony/yaml": "*"
    },
    "require-dev": {
        "doctrine/doctrine-fixtures-bundle": "^3.0",
        "fzaninotto/faker": "^1.8",
        "liip/test-fixtures-bundle": "^1.3",
        "phpstan/phpstan-doctrine": "^0.11.5",
        "phpstan/phpstan-shim": "^0.11.8",
        "phpstan/phpstan-symfony": "^0.11.6",
        "squizlabs/php_codesniffer": "^3.4",
        "symfony/dotenv": "*",
        "symfony/maker-bundle": "^1.11",
        "symfony/profiler-pack": "^1.0",
        "symfony/test-pack": "^1.0",
        "symfony/web-server-bundle": "*"
    },
    "config": {
        "platform": {
            "php": "7.3.1"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php71": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php56": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "analyze": "phpstan analyse",
        "analyze-baseline": [
            "sed -e '/phpstan-baseline\\.neon/ s/^/#/' phpstan.neon.dist > phpstan-without-baseline.neon",
            "phpstan analyze --configuration phpstan-without-baseline.neon --error-format baselineNeon > phpstan-baseline.neon  || true",
            "rm phpstan-without-baseline.neon"
        ],
        "lint": "phpcs",
        "lint-fix": "phpcbf"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.3.*"
        }
    }
}
