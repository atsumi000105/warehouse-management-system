<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSRF Token -->
    {#<meta name="csrf-token" content="{{ csrf_token() }}">#}

    <title>Donation Bank Hub</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Styles -->

    <link href="{{ asset('build/app.css') }}" rel="stylesheet">

</head>
<body class="skin-blue sidebar-mini">
<div id="app" class="wrapper">
    <header class="main-header">

        <!-- Branding Image -->
        <a class="logo" href="{{ url('app_home_home') }}">
            <span class="logo-lg"><strong>Donation Bank Hub</strong></span>
            <span class="logo-mini"><strong>DBH</strong></span>
        </a>

        <div class="navbar navbar-static-top">
            <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <!-- Right Side Of Navbar -->
            <div class="navbar-custom-menu">
                {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                <hb-userbar></hb-userbar>
                {% endif %}
                <ul class="nav navbar-nav">
                    <!-- Authentication Links -->
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" id="user-dropdown" data-toggle="dropdown"
                           aria-haspopup="true" aria-expanded="false">
                            {{ app.user.email }}
                        </a>

                        <ul class="dropdown-menu dropdown-menu-right" role="menu" aria-labelledby="user-dropdown">
                            <li class="user-footer">
                                <div class="pull-right">
                                    <a href="{{ url('app_login_logout') }}" class="btn btn-default btn-flat"
                                       onclick="event.preventDefault();
                                                     document.getElementById('logout-form').submit();">
                                        Logout
                                    </a>
                                </div>
                            </li>

                            <form id="logout-form" action="{{ url('app_login_logout') }}" method="POST"
                                  style="display: none;">
                                {#{{ csrf_field() }}#}
                            </form>
                        </ul>
                        {% else %}
                            <li><a href="{{ url('app_login_login') }}">Login</a></li>
                            <!--<li><a href="{{ url('app_login_register') }}">Register</a></li>!-->
                        {% endif %}
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <nav id="sidebar" class="main-sidebar">
        <hb-sidebar></hb-sidebar>
    </nav>
    <main class="content-wrapper">
        {% block content %}
        <hb-exceptionpane :exceptions="exceptions"></hb-exceptionpane>
        <router-view></router-view>
        {% endblock %}
    </main>
    <footer class="main-footer no-print">
        <strong>Copyright Â© <a href="https://happybottoms.org">HappyBottoms</a>.</strong> All rights
        reserved.
    </footer>
</div>

<!-- Scripts -->
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}

    <!-- Renders app.js & a webpack runtime.js file
        <script src="/build/runtime.js"></script>
        <script src="/build/app.js"></script> -->
{% endblock %}
{#<script src="/build//all.js"></script>#}
</body>
</html>

